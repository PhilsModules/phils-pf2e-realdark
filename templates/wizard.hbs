<div class="realdark-wizard-wrapper">
    <style>
        /* RESET & BASE */
        .realdark-wizard-window.window-app {
            background: transparent !important;
            box-shadow: none !important;
            border: none !important;
            width: 1300px !important;
            /* Wider for Preview */
        }

        .realdark-wizard-window .window-content {
            background: rgba(10, 10, 10, 0.95) !important;
            backdrop-filter: blur(20px);
            border: 1px solid var(--realdark-gold-dim);
            border-radius: 12px;
            box-shadow: 0 0 50px rgba(0, 0, 0, 1);
            color: var(--realdark-gold);
            font-family: 'Signika', sans-serif;
            padding: 0 !important;
            overflow: hidden;
            display: flex;
            flex-direction: row;
            /* Side by side */
            height: 600px;
        }

        .realdark-wizard-left {
            flex: 0 0 260px;
            display: flex;
            flex-direction: column;
            border-right: 1px solid rgba(255, 255, 255, 0.1);
            background: rgba(0, 0, 0, 0.3);
            overflow-y: hidden;
            /* No scrolling */
        }

        .realdark-wizard-right {
            flex: 1;
            position: relative;
            /* This container will reflect the theme variables live! */
            background-color: var(--realdark-sheet-bg);
            background-image:
                radial-gradient(circle at center, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.1) 60%, rgba(0, 0, 0, 0.6) 100%),
                var(--realdark-bg-url);
            background-size: cover;
            background-position: center;
            overflow: hidden;
            padding: 20px;
        }

        /* HEADER SECTION - COMPACT */
        .rd-header-panel {
            padding: 8px;
            /* EXTRA COMPACT */
            background: linear-gradient(to bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            text-align: center;
            position: relative;
            /* For absolute positioning of actions */
        }

        .rd-header-actions {
            position: absolute;
            top: 5px;
            right: 5px;
            display: flex;
            gap: 5px;
        }

        .rd-action-btn {
            background: transparent;
            border: none;
            color: #666;
            cursor: pointer;
            font-size: 0.9em;
            padding: 2px 5px;
            transition: color 0.2s;
        }

        .rd-action-btn:hover {
            color: var(--realdark-gold);
        }

        .rd-title {
            font-size: 1.1em;
            /* EXTRA COMPACT */
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin: 0;
            background: linear-gradient(45deg, var(--realdark-gold), white, var(--realdark-gold));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .rd-subtitle {
            font-size: 0.6em;
            /* EXTRA COMPACT */
            opacity: 0.6;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 1px;
        }

        /* SINGLE SCROLLABLE BODY */
        .rd-form-body {
            flex: 1;
            overflow-y: auto;
            padding: 10px;
            scrollbar-width: thin;
        }

        /* CATEGORY TITLE FOR PRESETS */
        .rd-preset-group-title {
            grid-column: 1 / -1; /* Span all columns */
            font-size: 0.7em;
            color: var(--realdark-gold);
            opacity: 0.6;
            text-transform: uppercase;
            margin-top: 8px;
            margin-bottom: 2px;
            text-align: center;
            letter-spacing: 1px;
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }

        /* PRESET GRID - ULTRA COMPACT */
        .rd-preset-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 2px;
            margin-bottom: 15px;
        }

        /* SECTION TITLES */
        .rd-section-title {
            font-family: 'Modesto Condensed', serif;
            font-size: 1.1em;
            color: var(--realdark-gold);
            margin: 15px 0 5px 0;
            padding-bottom: 2px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            text-transform: uppercase;
            letter-spacing: 1px;
            text-shadow: 0 2px 4px rgba(0,0,0,0.8);
            text-align: center; /* CENTERED */
        }

        .rd-preset-btn {
            flex: 1 1 45%; /* Auto width but try to fit 2 per line */
            background: rgba(0, 0, 0, 0.4);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #aaa;
            padding: 3px 2px;
            font-size: 0.7em;
            text-transform: uppercase;
            border-radius: 3px;
            cursor: pointer;
            transition: all 0.2s;
            text-align: center;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 100%;
        }

        .rd-preset-btn:hover, .rd-preset-btn.active {
            color: white;
            border-color: var(--realdark-gold);
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 0 5px rgba(0,0,0,0.5);
        }

        /* Group Headers (Optional, keeping it simple flat list for now but sorted) */
        
        /* CONTROLS & INPUTS - PREMIUM LOOK */
        .rd-control-group {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 8px 10px;
            background: transparent;
            border-bottom: 1px solid rgba(255, 255, 255, 0.03);
            transition: background 0.2s;
        }

        .rd-control-group:hover {
            background: rgba(255, 255, 255, 0.03);
        }

        .rd-label-main {
            font-size: 0.8em;
            color: #ccc;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .rd-input-wrapper {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .rd-hex-input {
            width: 70px;
            background: transparent;
            border: none;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            color: var(--realdark-gold); /* Gold Text */
            text-align: right;
            font-family: 'Courier New', monospace; /* Tech feel */
            font-size: 0.8em;
            padding: 2px;
            transition: all 0.2s;
        }

        .rd-hex-input:focus {
            outline: none;
            border-bottom-color: var(--realdark-gold);
            background: rgba(0,0,0,0.2);
        }

        .rd-swatch {
            width: 28px;
            height: 28px;
            border-radius: 50%; /* CIRCLE */
            border: 2px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
            overflow: hidden;
            cursor: pointer;
            position: relative; /* For absolute styling of input */
            transition: transform 0.2s, border-color 0.2s;
        }

        /* HIDE THE UGLY NATIVE INPUT BUT KEEP IT CLICKABLE */
        .rd-swatch input[type="color"] {
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            opacity: 0;
            cursor: pointer;
            border: none;
            padding: 0;
            margin: 0;
        }

        .rd-swatch:hover {
            transform: scale(1.1);
            border-color: var(--realdark-gold);
            box-shadow: 0 0 8px var(--realdark-gold-dim);
        }

        /* FOOTER */
        /* FOOTER */
        .rd-footer {
            padding: 10px;
            background: rgba(0, 0, 0, 0.4);
            text-align: center; /* CENTERED */
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            flex: 0 0 auto;
            display: flex; 
            justify-content: center; /* CENTERED */
        }

        .rd-submit-btn {
            background: linear-gradient(135deg, var(--realdark-gold), var(--realdark-gold-dim));
            border: none;
            color: #111;
            padding: 6px 25px; /* Compact padding */
            font-size: 0.9em;
            border-radius: 20px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
            width: auto; /* Auto width */
            transition: transform 0.2s;
        }

        .rd-submit-btn:hover {
            transform: scale(1.05);
            filter: brightness(1.1);
        }

    </style>

